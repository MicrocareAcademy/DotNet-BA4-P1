@using AcademyWeb.Models;
@model IList<Course>

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Course Name</th>
                    <th>Price</th>
                    <th>Duration In Days</th>
                </tr>
            </thead>
            <tbody>
                @if(Model != null)
                {
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>
                                @course.CourseName
                            </td>
                            <td>
                                @course.Price
                            </td>
                            <td>
                                @course.DurationInDays
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">
                            <div class="alert alert-warning" role="alert">
                                No Courses!
                            </div>
                        </td>
                    </tr>
                    
                }

            </tbody>
        </table>
    </div>
</div>