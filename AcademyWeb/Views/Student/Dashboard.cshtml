@using AcademyWeb.Models;
@model IList<Student>

@{
    Layout = "_Layout";
}

<div class="row">
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Name</th>
                <th>Roll No</th>
                <th>Email</th>
                <th>Mobile No</th>
                <th>Course</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var stuObj in Model)
            {
                <tr>
                    <td>@stuObj.StudentName</td>
                    <td></td>
                    <td>@stuObj.StudentEmail</td>
                    <td>@stuObj.StudentPhone</td>
                    <td>@stuObj.Course</td>
                    <td><a href="@Url.Action("StudentRO","Student")">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>